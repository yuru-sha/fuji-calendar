# アプリケーション設定
NODE_ENV=production
PORT=8000

# データベース設定 (PostgreSQL) - 接続プール最適化
DATABASE_URL=postgresql://fuji_user:prod_password_change_me@postgres:5432/fuji_calendar?schema=public&timezone=Asia/Tokyo&connection_limit=10&pool_timeout=20&connect_timeout=60
DB_NAME=fuji_calendar
DB_USER=fuji_user
DB_PASSWORD=prod_password_change_me

# データベース接続プール設定
DB_CONNECTION_LIMIT=10
DB_POOL_TIMEOUT=20
DB_CONNECT_TIMEOUT=60

# Redis設定
REDIS_HOST=redis
REDIS_PORT=6379

# 認証設定 (本番環境では必ず変更してください)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-minimum-32-characters

# ログ設定
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true

# CORS設定 (本番環境では実際のフロントエンドURLを設定)
FRONTEND_URL=https://your-domain.com

# パフォーマンス設定
CALCULATION_BATCH_SIZE=10
QUEUE_CONCURRENCY_LOCATION=1
QUEUE_CONCURRENCY_MONTHLY=2
QUEUE_CONCURRENCY_DAILY=4

# メンテナンス設定
AUTO_CLEANUP_ENABLED=true
CACHE_RETENTION_DAYS=90
HISTORICAL_RETENTION_YEARS=10