# Database (Docker 使用時)
DB_USER=fuji_user
DB_PASSWORD=password_change_me
DB_NAME=fuji_calendar
DATABASE_URL="postgresql://fuji_user:prod_password_change_me@postgres:5432/fuji_calendar?schema=public"

# Database (ローカル開発時)  
# DATABASE_URL="postgresql://username:password@localhost:5432/fuji_calendar?schema=public"

# Development Database (SQLite for quick setup)
# DATABASE_URL="file:./dev.db"

# Server
PORT=3000
NODE_ENV=development

# Logging
LOG_LEVEL=info
ENABLE_FILE_LOGGING=false
LOG_DIR=./logs

# Redis (Docker 使用時)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Redis (ローカル開発時)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# JWT Configuration
# SECURITY: Generate secure secrets in production with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_USE_32_CHAR_RANDOM_STRING
REFRESH_SECRET=CHANGE_THIS_IN_PRODUCTION_USE_32_CHAR_RANDOM_STRING

# Admin
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Worker Configuration
WORKER_CONCURRENCY=3
